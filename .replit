modules = ["python-3.11", "web", "nodejs-20"]

[nix]
channel = "stable-25_05"
packages = ["freetype", "lcms2", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "openssl", "postgresql", "tcl", "tk", "zlib"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Django App"

[[workflows.workflow]]
name = "Django App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backened/shaktishield && python manage.py runserver 0.0.0.0:5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 33039
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd backened/shaktishield && gunicorn --bind 0.0.0.0:5000 --reuse-port shaktishield.wsgi:application"]
build = ["bash", "-c", "cd backened/shaktishield && python manage.py collectstatic --noinput"]
